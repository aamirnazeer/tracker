generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(45)
  username String    @unique(map: "username_UNIQUE") @db.VarChar(45)
  password String    @db.VarChar(500)
  Entries  Entries[]
}

model Refreshtokens {
  id    Int    @id @default(autoincrement())
  token String @unique(map: "token_UNIQUE") @db.VarChar(500)
}

model Catagories {
  id      Int       @id @default(autoincrement())
  type    String    @unique(map: "type_UNIQUE") @db.VarChar(500)
  Entries Entries[]
}

model Entries {
  id         Int        @id @default(autoincrement())
  user       Users      @relation(fields: [userId], references: [id])
  userId     Int        @db.Int
  date       DateTime   @default(now())
  amount     Int        @db.Int
  catagory   Catagories @relation(fields: [catagoryId], references: [id])
  catagoryId Int        @db.Int
  comments   String     @db.VarChar(500)
}
